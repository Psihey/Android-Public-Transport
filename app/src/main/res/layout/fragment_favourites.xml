<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="38.5dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/text_item_view"
        android:gravity="center"
        android:text="@string/text_view_frequently_used_routes"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_favourites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tv_favourites" />

</RelativeLayout>