<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBottomSheet"
    app:behavior_hideable="false"
    app:behavior_peekHeight="48dp"
    app:elevation="4dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <RelativeLayout
        android:id="@+id/buttons_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <ImageButton
            android:id="@+id/btn_all_routes"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:foregroundGravity="left"
            android:background="@color/colorBottomSheet"
            app:srcCompat="@drawable/ic_front_bus_gray" />

        <ImageButton
            android:id="@+id/btn_tram"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorBottomSheet"
            app:srcCompat="@drawable/ic_train_public_gray" />

        <ImageButton
            android:id="@+id/btn_parking"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorBottomSheet"
            app:srcCompat="@drawable/ic_parking_gray" />

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/container_transport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttons_group"/>

</RelativeLayout>
