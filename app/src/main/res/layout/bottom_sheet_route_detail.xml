<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_route"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBottomSheetBackground"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#b5b5b3"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_route_info_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_marginTop="20dp"
        android:text="@string/text_view_route_number"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_route_info_transport_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:src="@drawable/ic_tram_gray_24_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_info_number"/>

    <ImageButton
        android:id="@+id/ib_route_info_favorite_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:src="@drawable/ic_favorite_gray_24_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_route_info_number"
        app:layout_constraintBottom_toTopOf="@+id/iv_route_info_transport_icon"/>

    <TextView
        android:id="@+id/tv_transport_route_info_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_info_number"
        app:layout_constraintLeft_toRightOf="@+id/iv_route_info_transport_icon"/>

    <View
        android:id="@+id/view_separate_line_top"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:background="#b5b5b3"
        app:layout_constraintBottom_toTopOf="@+id/tv_route_info_transport_fee"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_route_info_transport_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:text="@string/text_view_fee"
        android:textSize="@dimen/vehicles_detail_text_size_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transport_route_info_type_value"/>

    <TextView
        android:id="@+id/tv_route_info_transport_fee_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:gravity="end"
        android:textSize="@dimen/vehicles_detail_text_size_value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_route_info_transport_fee"
        app:layout_constraintTop_toBottomOf="@+id/view_separate_line_top"/>

    <TextView
        android:id="@+id/tv_route_info_transport_route_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:text="@string/text_view_distance"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_info_transport_fee"/>

    <TextView
        android:id="@+id/tv_route_info_transport_route_distance_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:gravity="end"
        android:textSize="@dimen/vehicles_detail_text_size_value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_route_info_transport_route_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_info_transport_fee_value"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:background="#b5b5b3"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_info_transport_route_distance"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tv_route_info_transport_route_distance"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>