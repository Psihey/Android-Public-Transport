<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_container_parking_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBottomSheetBackground"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_parking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_item_view"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_parking_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_below="@+id/tv_parking_name"
        android:layout_marginTop="8dp"
        android:text="@string/text_view_parking_number_of_places"
        android:textColor="@color/text_item_view"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_parking_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_below="@+id/tv_parking_place"
        android:layout_marginTop="8dp"
        android:text="@string/text_view_parking_parking_type"
        android:textColor="@color/text_item_view"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_separate_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_marginEnd="@dimen/vehicles_detail_layout_margin_end"
        android:layout_below="@+id/tv_parking_type"
        android:elevation="28dp"
        android:background="#b5b5b3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vehicles_detail_layout_margin_start"
        android:layout_marginTop="55dp"
        android:visibility="invisible"
        android:layout_below="@+id/view_separate_line_bottom"/>

</RelativeLayout>